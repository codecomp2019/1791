<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Space for Image-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg3"
        android:scaleType="center" />

    <!--imageView-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="401dp"
        android:layout_height="438dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"/>

    <!--Button to go to the next image-->
    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/newMeme"
        android:layout_centerHorizontal="true"
        android:background="#fdff"
        android:padding="20dp"
        android:text="About the Meme"
        android:textColor="#000"
        android:textSize="20dp"/>
    <!--Button to Read-->
    <Button
        android:id="@+id/newMeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select new meme"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="#fdff"

        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="181dp"
        android:layout_marginStart="47dp"
        android:contentDescription="Click on the image to read it again."
        android:text="Click on the image to read it again."
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"/>


